<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <p style="color: green"><%= notice %></p>
      <%= render @restaurant %>
      <br>
      <div class="text-center">
        <%= link_to "Back to restaurants", restaurants_path %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= simple_form_for [@restaurant, @review], html: { class: "form-horizontal" } do |f| %>
        <div class="form-group">
          <%= f.label :content, class: "col-sm-2 control-label" %>
          <div class="col-sm-10">
            <%= f.text_area :content, class: "form-control", rows: 3 %>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :rating, class: "col-sm-2 control-label" %>
          <div class="col-sm-10">
            <%= f.select :rating, (0..5), {}, class: "form-control" %>
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-offset-2 col-sm-10 text-center">
            <%= f.button :submit, class: "btn btn-primary" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
